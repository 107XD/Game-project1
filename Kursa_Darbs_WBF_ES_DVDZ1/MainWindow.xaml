<Window x:Class="Kursa_Darbs_WBF_ES_DVDZ1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Burger Builder" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <!-- Existing Menu -->
        <StackPanel Margin="0,30,0,0">
            <Button Content="McDonald's Menu" Click="McDonaldsMenu_Click"/>
            
            <Canvas Name="burgerCanvas" Background="LightGray" Width="600" Height="300" MouseDown="BurgerCanvas_MouseDown" MouseMove="BurgerCanvas_MouseMove" MouseUp="BurgerCanvas_MouseUp"/>
            <Button Content="Complete Burger" Click="CompleteBurger_Click"/>
            
            <Button Content="Go to Time" Click="GoToTime_Click"/>
        </StackPanel>
    </Grid>
</Window>
